<div class="forms-section">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Username", class: "sign-in-field"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "sign-in-field" %>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class: "sign-in-field" %>
    </div>
  <% end %>
</div>
